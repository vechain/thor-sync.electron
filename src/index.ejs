<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Thor Sync</title>
  <% if (htmlWebpackPlugin.options.nodeModules) { %>
    <!-- Add `node_modules/` to global paths so `require` works properly in development -->
    <script>
      require('module').globalPaths.push('<%= htmlWebpackPlugin.options.nodeModules.replace(/\\/g, '\\\\') %>')
    </script>
    <% } %>
</head>

<body>
  <div id="app"></div>
  <!-- Set `__static` path to static files in production -->
  <script>
    if (process.env.NODE_ENV !== 'development') {
      window.__static = require('path').join(__dirname, '/static').replace(/\\/g, '\\\\')
      window.__preload = require('path').join(__dirname, '/electron', 'preload.js').replace(/\\/g, '\\\\')
      window.__dappsHost = require('path').join(__dirname, '/electron/dapps/').replace(/\\/g, '\\\\')
    } else {
      window.__dappsHost = `http://localhost:${process.env.dappPort}/`
      window.__preload = require('path').join(process.env.DIST_PATH, '/electron', 'preload.js').replace(/\\/g, '\\\\')
    }
  </script>

  <!-- webpack builds are automatically injected -->
</body>

</html>
